
        <figure class="column c-three-fourth">
        <% @post_category.posts.each do |post| %> 
          <article class="blog-main">
        <div class="blog-img">
             <%= image_tag post.avatar.url(:thumb) %>
        </div>
           <div class="title-bar">
            <h3><%= link_to post.title, post_category_post_path(@post_category, post) %></h3>
           </div>
           <%= post.lead.html_safe %>
           <a href="<%= post_category_post_path(@post_category, post) %>">далее ...</a>
          </article>
          <% end %>
        </figure>